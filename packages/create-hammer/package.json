{
	"name": "create-hammer",
	"description": "Create Hammer apps/plugins with ease!",
	"version": "2.0.3",
	"author": "Barış DEMİRCİ <hi@338.rocks>",
	"scripts": {
		"build": "tsup src/cli.ts --minify",
		"clean": "rimraf dist",
		"dev": "tsup src/cli.ts --watch",
		"prepublishOnly": "npm run clean && npm run build",
		"update": "taze latest -w",
		"format": "prettier --write ."
	},
	"publishConfig": {
		"access": "public"
	},
	"bin": {
		"create-hammer": "dist/cli.js"
	},
	"files": [
		"dist",
		"templates"
	],
	"devDependencies": {
		"@types/node": "^20.10.0",
		"prettier": "^3.1.0",
		"rimraf": "^5.0.5",
		"taze": "^0.12.1",
		"tsup": "^8.0.1",
		"typescript": "^5.3.2"
	},
	"license": "GPL-3.0",
	"dependencies": {
		"create-create-app": "^7.3.0"
	}
}
